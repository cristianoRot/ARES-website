      position: relative;
      transition: background 0.4s ease;
    }

    .button:hover {
      background: radial-gradient(circle 150px at 80% -10%, #ffffff, #181b1b);
    }

    .button::after {
      content: "";
      position: absolute;
      width: 65%;
      height: 60%;
      border-radius: 120px;
      top: 0;
      right: 0;
      box-shadow: 0 0 20px #ffffff38;
      z-index: -1;
    }
    
    .blob1 {
      position: absolute;
      width: 70px;
      height: 100%;
      border-radius: 16px;
      bottom: 0;
      left: 0;
