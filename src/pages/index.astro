---
import Layout from '../layouts/Layout.astro'; // Layout per riutilizzare header e footer, se previsto.
---

<Layout title="ARES - Official Website">
  <!-- Main Container -->
  <div class="container">
    <!-- Left Section -->
    <div class="left-section">
      <!-- Thumbnail Slider -->
      <div class="thumbnail-slider">
        <div class="slider-container">
          <div class="slider-item">
            <img src="images/ares_screenshot1.png" alt="Screenshot 1">
          </div>
          <div class="slider-item">
            <img src="images/ares_screenshot2.png" alt="Screenshot 2">
          </div>
          <div class="slider-item">
            <img src="images/ares_screenshot3.png" alt="Screenshot 3">
          </div>
        </div>
        <button class="slider-btn prev-btn">&lt;</button>
        <button class="slider-btn next-btn">&gt;</button>
      </div>
      <!-- Description -->
      <div class="description">
        <p>
          Dive into the world of ARES, a futuristic multiplayer game where you explore, customize, and dominate.
          With stunning graphics and an immersive storyline, ARES promises an unparalleled gaming experience.
        </p>
      </div>
    </div>

    <!-- Right Section -->
    <div class="right-section">
      <!-- Game Info -->
      <div class="info-section">
        <h2>Game Information</h2>
        <div class="info-item">
          <span class="info-label">Developer:</span>
          <span class="info-value">Cristiano Rotunno</span>
        </div>
        <div class="info-item">
          <span class="info-label">Distributor:</span>
          <span class="info-value">ARES Studio</span>
        </div>
        <div class="info-item">
          <span class="info-label">Release Date:</span>
          <span class="info-value">2025</span>
        </div>
        <div class="info-item">
          <span class="info-label">Platforms:</span>
          <span class="info-value">
            <img src="https://img.icons8.com/windows/32/null/windows-10.png" alt="Windows">
            <img src="https://img.icons8.com/ios/32/null/mac-os.png" alt="MacOS">
          </span>
        </div>
      </div>

      <!-- Download Buttons -->
      <div class="cta-group">
        <a href="https://drive.google.com/uc?export=download&id=macOS-file-id" class="cta">
          <img src="images/apple_logo.png" alt="Apple Logo"> Download for MacOS
        </a>
        <a href="https://drive.google.com/uc?export=download&id=windows-file-id" class="cta">
          <img src="images/win11_logo.png" alt="Windows Logo"> Download for Windows
        </a>
        <a href="https://store.steampowered.com/" class="cta">
          <img src="images/steam_logo.png" alt="Steam Logo"> Get it on Steam
        </a>
      </div>
    </div>
  </div>

  <!-- JavaScript for Slider -->
  <script>
    const sliderContainer = document.querySelector('.slider-container');
    const sliderItems = document.querySelectorAll('.slider-item');
    const prevBtn = document.querySelector('.prev-btn');
    const nextBtn = document.querySelector('.next-btn');

    let currentIndex = 0;

    function updateSlider() {
      const offset = -currentIndex * 100; // Calculate offset for each image
      sliderContainer.style.transform = `translateX(${offset}%)`;
    }

    nextBtn.addEventListener('click', () => {
      currentIndex = (currentIndex + 1) % sliderItems.length; // Loop to first image
      updateSlider();
    });

    prevBtn.addEventListener('click', () => {
      currentIndex = (currentIndex - 1 + sliderItems.length) % sliderItems.length; // Loop to last image
      updateSlider();
    });
  </script>

  <!-- Styles -->
  <style>
    :root {
      --primary-color: #DFBD69;
      --secondary-color: #000000;
      --text-color: #FFFFFF;
    }
  
    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background-color: var(--secondary-color);
      color: var(--text-color);
      line-height: 1.6; /* Spaziatura tra le righe per migliorare la leggibilità */
    }
  
    .container {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      flex-wrap: nowrap;
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
      gap: 20px;
    }
  
    .left-section {
      flex: 3;
    }
  
    .right-section {
      flex: 1;
      background-color: #111111;
      border: 1px solid #333333;
      border-radius: 8px;
      padding: 20px;
      max-width: 400px;
    }
  
    h2 {
      font-size: 1.8rem;
      font-weight: 400; /* Font più leggero */
      color: var(--primary-color);
      margin-bottom: 10px;
    }
  
    p, .info-value {
      font-size: 1rem;
      font-weight: 300; /* Font più sottile */
      color: #E5E5E5;
      letter-spacing: 0.5px; /* Spaziatura tra le lettere per migliorare il design */
    }
  
    .info-item {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
    }
  
    .info-label {
      font-weight: 400; /* Font più leggero */
      color: var(--primary-color);
    }
  
    .cta-group {
      display: flex;
      flex-direction: column;
      gap: 10px;
      margin-top: 20px;
    }
  
    .cta {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 10px 15px;
      background-color: var(--primary-color);
      color: var(--secondary-color);
      text-decoration: none;
      font-weight: 400; /* Font leggero per i pulsanti */
      border-radius: 8px;
    }
  
    .cta img {
      margin-right: 10px;
      height: 20px;
    }
  
    .thumbnail-slider {
      position: relative;
      max-width: 100%;
      overflow: hidden;
      margin-bottom: 20px;
      border-radius: 8px;
      border: 1px solid #333333;
    }
  
    .slider-container {
      display: flex;
      transition: transform 0.5s ease-in-out;
    }
  
    .slider-item img {
      width: 90%;
      max-width: 500px;
      height: auto;
      display: block;
    }
  
    @media screen and (max-width: 768px) {
      .container {
        flex-wrap: wrap;
      }
  
      .left-section,
      .right-section {
        flex: 1 1 100%;
        max-width: 100%;
      }
  
      .right-section {
        margin-top: 20px;
      }
    }
  </style>
</Layout>
