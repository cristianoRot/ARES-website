---
import Layout from '../layouts/Layout.astro'; // Layout per riutilizzare header e footer, se previsto.
---

<Layout title="ARES - Official Website">
  <!-- Main Container -->
  <div class="container">
    <!-- Left Section -->
    <div class="left-section">
      <!-- Thumbnail Slider -->
      <div class="thumbnail-slider">
        <div class="slider-container">
          <div class="slider-item">
            <img src="images/ares_screenshot1.png" alt="Screenshot 1">
          </div>
          <div class="slider-item">
            <img src="images/ares_screenshot2.png" alt="Screenshot 2">
          </div>
          <div class="slider-item">
            <img src="images/ares_screenshot3.png" alt="Screenshot 3">
          </div>
          <div class="slider-item">
            <img src="images/ares_screenshot4.png" alt="Screenshot 4">
          </div>
        </div>
        <button class="slider-btn prev-btn">&lt;</button>
        <button class="slider-btn next-btn">&gt;</button>
      </div>
      <!-- Description -->
      <div class="description">
        <p>
          Dive into the world of ARES, a futuristic multiplayer game where you explore, customize, and dominate.
          With stunning graphics and an immersive storyline, ARES promises an unparalleled gaming experience.
        </p>
      </div>
    </div>

    <!-- Right Section -->
    <div class="right-section">
      <!-- Title -->
      <h1 class="game-title">ARES</h1>

      <!-- Download Buttons -->
      <div class="cta-group">
        <a href="https://drive.google.com/uc?export=download&id=macOS-file-id" class="cta">
          <img src="images/apple_logo.png" alt="Apple Logo"> Download for MacOS
        </a>
        <a href="https://drive.google.com/uc?export=download&id=windows-file-id" class="cta">
          <img src="images/win11_logo.png" alt="Windows Logo"> Download for Windows
        </a>
        <a href="https://store.steampowered.com/" class="cta">
          <img src="images/steam_logo.png" alt="Steam Logo"> Get it on Steam
        </a>
      </div>

      <!-- Game Info -->
      <div class="info-section">
        <div class="info-item">
          <span class="info-label">Developer</span>
          <span class="info-value">Cristiano Rotunno</span>
        </div>
        <div class="info-item">
          <span class="info-label">Distributor</span>
          <span class="info-value">ARES Studio</span>
        </div>
        <div class="info-item">
          <span class="info-label">Release Date</span>
          <span class="info-value">2025</span>
        </div>
        <div class="info-item">
          <span class="info-label">Initial Release</span>
          <span class="info-value">2025</span>
        </div>
        <div class="info-item">
          <span class="info-label">Platforms</span>
          <span class="info-value">
            <img src="images/win11_logo.png" alt="Windows">
            <img src="images/apple_logo.png" alt="MacOS">
          </span>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <section class="features">
      <div class="feature">
        <h3>Realistic Graphics</h3>
        <p>Immerse yourself in a world with next-generation graphic details.</p>
      </div>
      <div class="feature">
        <h3>Dynamic Multiplayer</h3>
        <p>Take on epic challenges in advanced multiplayer mode.</p>
      </div>
      <div class="feature">
        <h3>Total Customization</h3>
        <p>Create your own unique style with customizable gear.</p>
      </div>
    </section>

  </div>

  <!-- JavaScript for Slider -->
  <script>
    const sliderContainer = document.querySelector('.slider-container');
    const sliderItems = document.querySelectorAll('.slider-item');
    const prevBtn = document.querySelector('.prev-btn');
    const nextBtn = document.querySelector('.next-btn');

    let currentIndex = 0;

    function updateSlider() {
      const offset = -currentIndex * 100; // Calculate offset for each image
      sliderContainer.style.transform = `translateX(${offset}%)`;
    }

    nextBtn.addEventListener('click', () => {
      currentIndex = (currentIndex + 1) % sliderItems.length; // Loop to first image
      updateSlider();
    });

    prevBtn.addEventListener('click', () => {
      currentIndex = (currentIndex - 1 + sliderItems.length) % sliderItems.length; // Loop to last image
      updateSlider();
    });
  </script>

  <!-- Styles -->
  <style>
    :root {
      --primary-color: #926F34;
      --secondary-color: #0f1116;
      --text-color: #FFFFFF;
    }

    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background-color: var(--secondary-color);
      color: var(--text-color);
      line-height: 1.6; /* Spaziatura tra le righe per migliorare la leggibilità */
    }

    .container {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      flex-wrap: nowrap;
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
      gap: 20px;
    }

    .left-section {
      flex: 2;
    }

    .thumbnail-slider {
      position: relative;
      max-width: 100%;
      overflow: hidden;
      margin-bottom: 20px;
      border-radius: 8px;
      border: 1px solid #333333;
    }

    .slider-container {
      display: flex;
      transition: transform 0.5s ease-in-out;
    }

    .slider-item img {
      max-width: 100%;
      height: auto;
      display: block;
    }

    .slider-item {
      min-width: 100%;
    }

    .slider-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background-color: var(--primary-color);
      color: var(--secondary-color);
      border: none;
      padding: 10px;
      cursor: pointer;
      z-index: 100;
      border-radius: 5px;
      font-size: 1.2rem;
    }

    .prev-btn {
      left: 10px;
    }

    .next-btn {
      right: 10px;
    }

    .right-section {
      flex: 1;
      background-color: #0f1116;
      border: none;
      border-radius: 8px;
      max-width: 400px;
    }

    .game-title {
      font-size: 2.5rem;
      font-weight: 900;
      color: var(--primary-color);
      text-align: center;
      margin-bottom: 20px;
    }

    .description {
      font-size: 1rem;
      line-height: 1.6;
    }

    h2 {
      font-size: 1.8rem;
      font-weight: 400; /* Font più leggero */
      color: var(--primary-color);
      margin-bottom: 10px;
    }

    .info-section {
      background-color: #0f1116; /* Sfondo scuro */
      padding: 20px;
      border-radius: 8px;
    }

    .info-value {
      font-size: 1rem;
      font-weight: 400;
      color: #FFFFFF;
      text-align: right;
    }

    .info-value img {
      height: 20px;
    }

    .info-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 0;
      border-bottom: 1px solid #333333; /* Separatore tra le righe */
    }

    .info-item:last-child {
      border-bottom: none; /* Rimuove la linea per l'ultima voce */
    }

    .info-label {
      font-size: 1rem;
      font-weight: 400;
      color: #777;
    }

    .cta-group {
      display: flex;
      flex-direction: column;
      gap: 10px;
      margin-bottom: 20px; /* Spaziatura tra pulsanti e info box */
    }

    .cta {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 10px 15px;
      background-color: var(--secondary-color);
      color: var(--text-color);
      text-decoration: none;
      font-weight: 400; /* Font per i pulsanti */
      border: 1px solid var(--primary-color);
    }

    .cta:hover {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 10px 15px;
      background-color: var(--primary-color);
      color: var(--secondary-color);
      text-decoration: none;
      font-weight: 400; /* Font per i pulsanti */
      border: 1px solid var(--secondary-color);
    }

    .cta img {
      margin-right: 10px;
      height: 20px;
    }

    .features {
      display: flex;
      justify-content: center;
      gap: 20px;
      padding: 50px 20px;
      text-align: center;
    }
    .features .feature {
      flex: 1;
      max-width: 300px;
      background: #2A2A3F;
      padding: 20px;
      border-radius: 10px;
      transition: transform 0.3s;
    }
    .features .feature:hover {
      transform: translateY(-10px);
    }
    .features .feature h3 {
      margin-bottom: 10px;
      font-size: 1.5rem;
      font-weight: 700;
    }
    .features .feature p {
      color: #E5E5E5;
    }

    @media screen and (max-width: 768px) {
      .container {
        flex-wrap: wrap;
      }

      .left-section,
      .right-section {
        flex: 1 1 100%;
        max-width: 100%;
      }

      .right-section {
        margin-top: 20px;
      }
    }
  </style>
</Layout>
