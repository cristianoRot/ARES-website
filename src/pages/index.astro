---
import Layout from '../layouts/Layout.astro';
---

<Layout title="ARES - Official Website">
  <!-- Static Background with Slideshow -->
  <div class="background-slideshow">
    <img class="background-image" src="images/ares_screenshot1.png" alt="Background 1">
    <img class="background-image" src="images/ares_screenshot2.png" alt="Background 2">
    <img class="background-image" src="images/ares_screenshot3.png" alt="Background 3">
    <img class="background-image" src="images/ares_screenshot4.png" alt="Background 4">
  </div>

  <!-- Foreground Content -->
  <div class="content">
    <!-- Title -->
    <h1 class="game-title">ARES</h1>

    <!-- Download Buttons -->
    <div class="cta-group">
      <a href="https://drive.google.com/uc?export=download&id=macOS-file-id" class="cta">
        <img src="images/apple_logo.png" alt="Apple Logo"> Download for MacOS
      </a>
      <a href="https://drive.google.com/uc?export=download&id=windows-file-id" class="cta">
        <img src="images/win11_logo.png" alt="Windows Logo"> Download for Windows
      </a>
      <a href="https://store.steampowered.com/" class="cta">
        <img src="images/steam_logo.png" alt="Steam Logo"> Get it on Steam
      </a>
    </div>

    <!-- Description -->
    <div class="game-description">
      <p>
        Step into the world of <strong>ARES</strong>, the ultimate <strong>multiplayer</strong> experience! Challenge your friends or team up with them in epic battles featuring thrilling game modes like <strong>Deathmatch</strong>, <strong>Domain</strong>, and <strong>Survival</strong>. Explore breathtaking <strong>realistic graphics</strong> and immerse yourself in an action-packed journey. Customize your <strong>weapons</strong> to match your unique playstyle and get ready to dominate the battlefield. The fun begins now!
      </p>
    </div>

    <!-- Game Info -->
    <div class="info-section">
      <div class="info-item">
        <span class="info-label">Developer</span>
        <span class="info-value">Cristiano Rotunno</span>
      </div>
      <div class="info-item">
        <span class="info-label">Distributor</span>
        <span class="info-value">ARES Studio</span>
      </div>
      <div class="info-item">
        <span class="info-label">Release Date</span>
        <span class="info-value">2025</span>
      </div>
      <div class="info-item">
        <span class="info-label">Platforms</span>
        <span class="info-value">
          <img src="images/win11_logo.png" alt="Windows">
          <img src="images/apple_logo.png" alt="MacOS">
        </span>
      </div>
    </div>

    <!-- Features Section -->
    <section class="features">
      <div class="feature">
        <h3>Realistic Graphics</h3>
        <p>Immerse yourself in a world with next-generation graphic details.</p>
      </div>
      <div class="feature">
        <h3>Dynamic Multiplayer</h3>
        <p>Take on epic challenges in advanced multiplayer mode.</p>
      </div>
      <div class="feature">
        <h3>Total Customization</h3>
        <p>Create your own unique style with customizable gear.</p>
      </div>
    </section>
  </div>

  <!-- JavaScript for Background Slideshow -->
  <script>
    const images = document.querySelectorAll('.background-image');
    let currentIndex = 0;

    function changeBackground() {
      images[currentIndex].classList.remove('visible');
      currentIndex = (currentIndex + 1) % images.length;
      images[currentIndex].classList.add('visible');
    }

    setInterval(changeBackground, 5000); // Cambia immagine ogni 5 secondi
  </script>
</Layout>

<style>
  :root {
    --primary-color: #926F34;
    --secondary-color: rgba(0, 0, 0, 0.8);
    --text-color: #FFFFFF;
    --overlay-color: rgba(0, 0, 0, 0.5);
  }

  body {
    margin: 0;
    font-family: 'Inter', sans-serif;
    background-color: var(--secondary-color);
    color: var(--text-color);
  }

  .background-slideshow {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1;
  }

  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 1s;
  }

  .background-image.visible {
    opacity: 1;
  }

  .content {
    position: relative;
    z-index: 1;
    background-color: var(--overlay-color);
    padding: 20px;
    border-radius: 8px;
    max-width: 800px;
    margin: 50px auto;
    text-align: center;
  }

  .game-title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 20px;
    color: var(--primary-color);
  }

    .cta-group {
      display: flex;
      flex-direction: column;
      gap: 10px;
      margin-bottom: 20px; /* Spaziatura tra pulsanti e info box */
      width: 300px;
    }

    .cta {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 10px 15px;
      background-color: var(--secondary-color);
      color: var(--text-color);
      text-decoration: none;
      font-weight: 400; /* Font per i pulsanti */
      border: 1px solid var(--primary-color);
    }

    .cta:hover {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 10px 15px;
      background-color: var(--primary-color);
      color: var(--secondary-color);
      text-decoration: none;
      font-weight: 400; /* Font per i pulsanti */
      border: 1px solid var(--secondary-color);
    }

    .cta img {
      margin-right: 10px;
      height: 20px;
    }

  .game-description {
    margin: 20px 0;
    font-size: 1.2rem;
    line-height: 1.8;
  }

    .info-section {
      background-color: #0f1116; /* Sfondo scuro */
      padding: 20px;
      border-radius: 8px;
      width: 300px;
    }

    .info-value {
      font-size: 1rem;
      font-weight: 400;
      color: #FFFFFF;
      text-align: right;
    }

    .info-value img {
      height: 20px;
    }

    .info-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 0;
      border-bottom: 1px solid #333333; /* Separatore tra le righe */
    }

    .info-item:last-child {
      border-bottom: none; /* Rimuove la linea per l'ultima voce */
    }

    .info-label {
      font-size: 1rem;
      font-weight: 400;
      color: #777;
    }

    .features {
      display: flex;
      justify-content: center;
      gap: 20px;
      padding: 50px 20px;
      text-align: center;
    }

    .features .feature {
      flex: 1;
      max-width: 300px;
      background: var(--tertiary-color);
      padding: 20px;
      border-radius: 10px;
      transition: transform 0.3s;
    }
    .features .feature:hover {
      transform: translateY(-10px);
    }
    .features .feature h3 {
      margin-bottom: 10px;
      font-size: 1.5rem;
      font-weight: 700;
    }
    .features .feature p {
      color: #E5E5E5;
    }
</style>
